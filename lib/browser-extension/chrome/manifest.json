{
  "manifest_version": 3,
  "name": "Vicinae Browser Integration",
  "version": "1.0.0",
  "description": "Gives vicinae access to your browser tabs and much more",
  "permissions": [
    "nativeMessaging",
	"tabs"
  ],

  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vicinae Browser Integration",
    "default_icon": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png"
	}
  }
}
